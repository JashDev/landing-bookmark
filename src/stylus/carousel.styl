.carousel
  text-align: left 
  margin: 2em auto
  max-width: 550px
  &-content
    &[open]
      .carousel
        &-header
          border: none
          &::-webkit-details-marker
            color: var(--softRed)
  &-header
    padding: 1.5em 0
    border-bottom: 1px solid #e5e5e5
    font-size: .9em
    &:focus
      outline: none
    &::-webkit-details-marker
      color: var(--softBlue)
      float: right 
  @media screen and (min-width: 1024px)
    border-top: 1px solid #e5e5e5